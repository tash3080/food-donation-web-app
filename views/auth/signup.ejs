<section class="vh-100" style="background-image: url('/assets/images/signup-bg.jpg'); background-size: cover; background-position: center;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-8">
          <div class="card" style="border-radius: 1rem; background-color: rgba(255, 255, 255, 0.8);">
            <div class="row g-0">
              <div class="col-md-12 col-lg-12">
                <div class="card-body p-4 p-lg-5 text-black text-center">
  
                  <form action="/auth/signup" method="POST">
  
                    <div class="d-flex align-items-center mb-3 pb-1">
                      <i class="fas fa-user fa-2x me-3" style="color: blue;"></i>
                      <span class="h1 fw-bold mb-0"><span style="color: #1082d8;">SHARE</span> <span
                          style="color: purple;">PLATE</span></span>
                    </div>
  
                    <h5 class="fw-bold mb-3 pb-3" style="letter-spacing: 1px;">Sign up for an account</h5>
  
                    <% if(typeof errors != 'undefined') { %>
                    <% errors.forEach(function(error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                      <%= error.msg %>
                      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% }); %>
                    <% } %>
  
                    <div class="form-outline mb-3" style="width: 70%; margin: 0 auto;">
                      <input type="text" name="firstName" class="form-control form-control-lg" style="width: 100%; border-radius: 20px;"
                        placeholder="First name" value="<%= typeof firstName != 'undefined' ? firstName : '' %>" required autofocus>
                    </div>
  
                    <div class="form-outline mb-3" style="width: 70%; margin: 0 auto;">
                      <input type="text" name="lastName" class="form-control form-control-lg" style="width: 100%; border-radius: 20px;"
                        placeholder="Last name" value="<%= typeof lastName != 'undefined' ? lastName : '' %>" required>
                    </div>
  
                    <div class="form-outline mb-3" style="width: 70%; margin: 0 auto;">
                      <input type="email" name="email" class="form-control form-control-lg" style="width: 100%; border-radius: 20px;"
                        placeholder="Email address" value="<%= typeof email != 'undefined' ? email : '' %>" required>
                    </div>
  
                    <div class="form-outline mb-3" style="width: 70%; margin: 0 auto;">
                      <input type="password" name="password1" class="form-control form-control-lg" style="width: 100%; border-radius: 20px;"
                        placeholder="Password" value="<%= typeof password1 != 'undefined' ? password1 : '' %>" required>
                    </div>
  
                    <div class="form-outline mb-3" style="width: 70%; margin: 0 auto;">
                      <input type="password" name="password2" class="form-control form-control-lg" style="width: 100%; border-radius: 20px;"
                        placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" required>
                    </div>
  
                    <div class="form-outline mb-3" style="width: 70%; margin: 0 auto;">
                      <select class="form-select" name="role" id="role">
                        <option value="donor">Donor</option>
                        <option value="agent">Agent</option>
                        <option value="admin">Admin</option>
                      </select>
                      <label class="form-label" for="role">Signup as</label>
                    </div>
  
                    <div class="pt-1 mb-4">
                      <button class="btn btn-dark btn-lg btn-block" type="submit" style="background-color: blue; border-radius: 20px;">Sign Up</button>
                    </div>
  
                    <p class="mb-5 pb-lg-2">Already have an account? <a href="/auth/login">Login here</a></p>
                    <a href="#!" class="small text-muted">Terms of use.</a>
                    <a href="#!" class="small text-muted">Privacy policy</a>
                  </form>
  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
