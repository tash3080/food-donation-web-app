<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/assets/css/admin/dashboard.css">
</head>
<body>
  <main>
    <%- include('../partials/adminSidebar') %>

    <div id="main-wrapper" class="p-4">
      <span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span><br>
      <br>

      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% const cards = [
          { num: numAdmins, label: 'Admins', color: 'bg-primary', icon: 'fas fa-user-cog' },
          { num: numDonors, label: 'Donors', color: 'bg-success', icon: 'fas fa-hand-holding-heart' },
          { num: numAgents, label: 'Agents', color: 'bg-info', icon: 'fas fa-user-secret' },
          { num: numPendingDonations, label: 'Donations - New Requests', color: 'bg-warning', icon: 'fas fa-hands-helping' },
          { num: numAcceptedDonations, label: 'Donations - To Be Assigned', color: 'bg-secondary', icon: 'fas fa-tasks' },
          { num: numAssignedDonations, label: 'Donations - To Be Collected', color: 'bg-danger', icon: 'fas fa-box-open' },
          { num: numCollectedDonations, label: 'Donations - Collected', color: 'bg-primary', icon: 'fas fa-gift' }
        ]; %>

        <% cards.forEach(card => { %>
          <div class="col">
            <div class="card h-100 shadow <%= card.color %> text-white">
              <div class="card-body text-center">
                <i class="<%= card.icon %> icon"></i>
                <h5 class="card-title mt-3"><%= card.label %></h5>
                <div class="fs-1 mb-2"><%= card.num %></div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </main>
</body>
</html>
