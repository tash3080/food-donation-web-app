<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
    <link rel="stylesheet" href="/assets/css/agent/dashboard.css">
</head>
<body>
    <main>
        <%- include('../partials/agentSidebar') %>
        <div id="main-wrapper" class="p-4">
            <span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span><br>
            <br>

            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                <% const cards = [
                    { num: numAssignedDonations, label: 'Donations - To Be Collected', color: 'bg-primary', icon: 'fas fa-box-open' },
                    { num: numCollectedDonations, label: 'Donations - Collected', color: 'bg-success', icon: 'fas fa-gift' },
                ]; %>

                <% cards.forEach(card => { %>
                <div class="col">
                    <div class="card h-100 shadow <%= card.color %> text-white">
                        <div class="card-body text-center">
                            <i class="<%= card.icon %> icon"></i>
                            <h5 class="card-title mt-3"><%= card.label %></h5>
                            <div class="fs-1 mb-2"><%= card.num %></div>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </main>
</body>
</html>
